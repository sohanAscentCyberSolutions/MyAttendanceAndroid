<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"

        android:layout_marginTop="@dimen/spacing_50"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profiletwo"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/profile_image"
                android:text="Manish Aggarwal"
                android:textColor="@color/bgColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/profile_image"
                android:text="Jr Android Developer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_designation"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/profile_image"
                android:text="Gmda Gurugram"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/this_month_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image"
                android:layout_marginTop="10dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="This Month Status :"
                android:textColor="@color/bgColor"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableLeftCompat="@drawable/ic_baseline_calendar_today_24" />

            <TextView
                android:id="@+id/tv_userDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/spacing_180"
                android:layout_below="@id/profile_image"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/this_month_tv"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/spacing_10"
                android:orientation="horizontal"
                android:weightSum="3">





                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Total Present :"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Total Absent :"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Total Late :"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="@dimen/spacing_100"
                android:layout_below="@id/ll1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="@dimen/spacing_20"
                android:layout_marginTop="50dp">

                <com.robinhood.ticker.TickerView
                    android:id="@+id/presentTicker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_background"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="0"
                    android:textColor="@color/green"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    app:ticker_animationDuration="1500"
                    app:ticker_defaultCharacterList="number" />

                <com.robinhood.ticker.TickerView
                    android:id="@+id/absentTicker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_background"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="0"
                    android:layout_marginLeft="@dimen/spacing_100"
                    android:textColor="@color/red"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    app:ticker_animationDuration="1500"
                    app:ticker_defaultCharacterList="number" />
                <com.robinhood.ticker.TickerView
                    android:id="@+id/tv_user_total_lateTicker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_background"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="0"
                    android:layout_marginLeft="@dimen/spacing_100"
                    android:textColor="@color/yellow"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    app:ticker_animationDuration="1500"
                    app:ticker_defaultCharacterList="number" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/this_month_tv"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Working Days:"
                    android:textAlignment="center"
                    android:textColor="@color/bgColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Present Days:"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Absent Days:"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll1"
                android:visibility="gone"
                android:orientation="horizontal"
                android:weightSum="3">


                <com.robinhood.ticker.TickerView
                    android:id="@+id/working_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/line_background"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="0"
                    android:textColor="@color/bgColor"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    app:ticker_animationDuration="1500"
                    app:ticker_defaultCharacterList="number" />


                <com.robinhood.ticker.TickerView
                    android:id="@+id/present_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/line_background"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="0"
                    android:textColor="@color/green"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    app:ticker_animationDuration="1500"
                    app:ticker_defaultCharacterList="number"  />

                <com.robinhood.ticker.TickerView
                    android:id="@+id/absent_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_background"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    app:ticker_animationDuration="1500"
                    app:ticker_defaultCharacterList="number" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_two"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/layout1"
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/spacing_15"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Click Here To View Calender !!"
                        android:textAlignment="center"
                        android:textColor="@color/bgColor"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <TextView
                            android:textColor="@color/yellow"
                            android:layout_margin="4dp"
                            android:background="@drawable/line_background"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/leave"
                            android:text="Total" />

                        <TextView
                            android:layout_margin="4dp"
                            android:textColor="@color/green"
                            android:background="@drawable/line_background"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/present"
                            android:text="Present" />

                        <TextView
                            android:layout_margin="4dp"
                            android:textColor="@color/red"
                            android:background="@drawable/line_background"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/absent"
                            android:text="Absent" />






                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/main_ticker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_85"
            android:layout_below="@id/ll1"
            android:layout_marginTop="@dimen/spacing_250"
            android:visibility="gone"
            android:layout_marginRight="@dimen/spacing_15"
            android:layout_marginLeft="@dimen/spacing_15"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.robinhood.ticker.TickerView
                android:id="@+id/tv_total_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/line_background"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="5"
                android:textColor="@color/yellow"
                android:textSize="25dp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:ticker_animationDuration="1500"
                app:ticker_defaultCharacterList="number" />


            <com.robinhood.ticker.TickerView
                android:id="@+id/tv_total_main_present"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/line_background"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="2"
                android:textColor="@color/green"
                android:textSize="25dp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:ticker_animationDuration="1500"
                app:ticker_defaultCharacterList="number"  />

            <com.robinhood.ticker.TickerView
                android:id="@+id/tv_total_main_absent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/line_background"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="3"
                android:textColor="@color/red"
                android:textSize="25dp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:ticker_animationDuration="1500"
                app:ticker_defaultCharacterList="number" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:visibility="visible"
            android:layout_below="@id/card_two"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/green_pie"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/spacing_14"
                            android:text="Present"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/alice" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_5"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/red_pie"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/spacing_14"
                            android:text="Absent"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/alice" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_5"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/yellow"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/spacing_14"
                            android:text="Late"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/alice" />
                    </LinearLayout>
                </LinearLayout>
                <org.eazegraph.lib.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:padding="8dp"
                    app:egInnerPaddingColor="#fff" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/spacing_10"
        android:layout_height="@dimen/spacing_140"
        android:layout_marginRight="@dimen/spacing_10"
        android:layout_marginTop="500dp"
        android:visibility="gone">
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"

        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/punchin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            app:button_background="@drawable/shape_button_white"
            app:button_bottom_padding="20dp"
            app:button_image_disabled="@drawable/ic_baseline_check_24"
            app:button_image_enabled="@drawable/ic_baseline_check_24"
            app:button_image_height="60dp"
            app:button_image_width="100dp"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
            app:button_top_padding="20dp"
            app:initial_state="disabled"
            app:inner_text="Swipe To Punch In"
            app:inner_text_background="@drawable/shape_round_green"
            app:inner_text_bottom_padding="18dp"
            app:inner_text_color="@android:color/white"
            app:inner_text_size="16sp"
            app:inner_text_left_padding="18dp"
            app:inner_text_top_padding="18dp" />

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/punchOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/punchin"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            android:layout_weight="1"
            app:button_background="@drawable/shape_button_white"
            app:button_bottom_padding="20dp"
            app:button_image_disabled="@drawable/ic_baseline_check_24"
            app:button_image_enabled="@drawable/ic_baseline_close_24"
            app:button_image_height="60dp"
            app:button_image_width="100dp"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
            app:button_top_padding="20dp"
            app:initial_state="disabled"
            app:inner_text="Swipe To Punch Out"
            app:inner_text_background="@drawable/shape_round_red"
            app:inner_text_bottom_padding="18dp"
            app:inner_text_color="@android:color/white"
            app:inner_text_size="16sp"
            app:inner_text_left_padding="16dp"
            app:inner_text_top_padding="18dp" />

    </LinearLayout>



</RelativeLayout>