<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="@dimen/spacing_3"
        android:layout_marginBottom="@dimen/spacing_5"
        android:background="@drawable/bg_cover">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgColor"
            android:layout_marginTop="@dimen/spacing_1"
            android:layout_marginLeft="@dimen/spacing_1"
            android:layout_marginRight="@dimen/spacing_1"
            android:layout_marginBottom="@dimen/spacing_1">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--  <de.hdodenhof.circleimageview.CircleImageView
                      android:id="@+id/imgProfile"
                      android:layout_width="@dimen/spacing_85"
                      android:layout_height="@dimen/spacing_85"
                      android:layout_margin="@dimen/spacing_5"
                      android:src="@drawable/profiletwo"/>-->
                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John"
                    android:visibility="gone"
                    android:textSize="@dimen/spacing_16"
                    android:textColor="@color/bgColor"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/spacing_50"
                    android:layout_marginTop="@dimen/spacing_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="@dimen/spacing_60"
                android:layout_marginTop="@dimen/spacing_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance Date"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/spacing_10"
                    />
                <TextView
                    android:id="@+id/tvAttendanceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  _  "
                    android:fontFamily="@font/alice"
                    android:textSize="@dimen/spacing_16"
                    android:layout_marginLeft="@dimen/spacing_5"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="@dimen/spacing_30">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/spacing_14"
                    android:fontFamily="@font/alice"
                    android:text="Punch in Time -"
                    />
                <TextView
                    android:id="@+id/tvpunch_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" _ "
                    android:textSize="@dimen/spacing_16"
                    android:fontFamily="@font/alice"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00AM"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/spacing_10"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Punch out Time -"
                    android:fontFamily="@font/alice"
                    android:textSize="@dimen/spacing_14"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_punchout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" _ "
                    android:textSize="@dimen/spacing_16"
                    android:fontFamily="@font/alice"
                    android:layout_marginLeft="1dp"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="@dimen/spacing_60"
                android:layout_height="@dimen/spacing_60"
                android:layout_marginTop="@dimen/spacing_10"
                android:layout_marginLeft="@dimen/spacing_5"
                android:background="@drawable/newsl">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/spacing_18"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>