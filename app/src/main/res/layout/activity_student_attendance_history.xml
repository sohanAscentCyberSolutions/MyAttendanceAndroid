<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddTeacherAttendance.Activity.StudentAttendanceHistoryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/DrawerArrowStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColor"
        android:visibility="visible"
        app:popupTheme="@style/DrawerArrowStyle"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Student Attendance History"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_margin="5dp"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Class"
        android:id="@+id/className"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_below="@+id/className"
        android:layout_above="@+id/activity_main_bottom_navigation"
        android:id="@+id/activity_main_nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/mynavgraph"
        tools:ignore="MissingClass" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/activity_main_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bgColor"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/yellow"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>