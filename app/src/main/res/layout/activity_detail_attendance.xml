<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.DetailAttendanceActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_150"
            android:background="@color/bgColor">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_15"
                android:src="@drawable/ic_arrow_back_black_24dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layoutmn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/spacing_120"
                android:layout_height="@dimen/spacing_120"
                android:src="@drawable/profiletwo"
                android:layout_marginLeft="@dimen/spacing_30"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_emp_name"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="@font/alice"
                    android:textSize="@dimen/spacing_16"
                    android:layout_marginTop="@dimen/spacing_20"
                    android:layout_marginLeft="@dimen/spacing_30"/>
                <TextView
                    android:id="@+id/tv_emp_id"
                    android:layout_marginLeft="@dimen/spacing_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/spacing_16"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/spacing_30"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/spacing_16"
                    android:textColor="@color/bgColor"
                    android:fontFamily="@font/alice"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_designation" />
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_below="@+id/layoutmn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f8f8f8"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/this_month_tv"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5"
                        android:layout_marginLeft="@dimen/spacing_20"
                        android:layout_weight="1"
                        android:fontFamily="@font/alice"
                        android:text="Total Present :"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="@dimen/spacing_7"
                        android:layout_weight="1"
                        android:fontFamily="@font/alice"
                        android:text="Total Absent :"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="Total Late :"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutvm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_100"
                    android:layout_below="@id/ll1"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:layout_marginTop="0dp">

                    <com.robinhood.ticker.TickerView
                        android:id="@+id/presentTicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/line_background"
                        android:gravity="center"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="0"
                        android:textColor="@color/green"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        app:ticker_animationDuration="1500"
                        app:ticker_defaultCharacterList="number" />

                    <com.robinhood.ticker.TickerView
                        android:id="@+id/absentTicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/line_background"
                        android:gravity="center"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="0"
                        android:layout_marginLeft="@dimen/spacing_100"
                        android:textColor="@color/red"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        app:ticker_animationDuration="1500"
                        app:ticker_defaultCharacterList="number" />
                    <com.robinhood.ticker.TickerView
                        android:id="@+id/tv_user_total_lateTicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/line_background"
                        android:gravity="center"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="0"
                        android:layout_marginLeft="@dimen/spacing_100"
                        android:textColor="@color/yellow"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        app:ticker_animationDuration="1500"
                        app:ticker_defaultCharacterList="number" />

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/layout_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:layout_below="@id/card_two"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/green_pie"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/spacing_14"
                                    android:text="Present"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/alice" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/spacing_5"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/red_pie"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/spacing_14"
                                    android:text="Absent"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/alice" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/spacing_5"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@color/yellow"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/spacing_14"
                                    android:text="Late"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/alice" />
                            </LinearLayout>
                        </LinearLayout>
                        <org.eazegraph.lib.charts.PieChart
                            android:id="@+id/piechart"
                            android:layout_width="155dp"
                            android:layout_height="155dp"
                            android:padding="8dp"
                            app:egInnerPaddingColor="#fff" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

