<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ApplyLeaveActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="#f8f8f8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:cardUseCompatPadding="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <com.gmda.attendance.CommonClass.TypeWriter
                            android:id="@+id/your_day_in_card_tv"
                            android:layout_width="match_parent"
                            android:layout_height="25sp"
                            android:background="@color/bgColor"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Apply Leave"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_selectfrom"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/calender"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/your_day_in_card_tv" />


                        <View

                            android:id="@+id/view_view"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginEnd="3dp"
                            android:background="@drawable/view_shape_line"
                            app:layout_constraintBottom_toBottomOf="@id/img_selectfrom"
                            app:layout_constraintLeft_toRightOf="@id/img_selectfrom"
                            app:layout_constraintRight_toLeftOf="@id/check_out_circle"
                            app:layout_constraintTop_toTopOf="@id/img_selectfrom" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/check_out_circle"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:src="@drawable/calender"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/your_day_in_card_tv" />


                        <TextView
                            android:id="@+id/selectfromdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From Date"
                            android:textColor="@color/bgColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="@id/img_selectfrom"
                            app:layout_constraintRight_toRightOf="@id/img_selectfrom"
                            app:layout_constraintTop_toBottomOf="@id/img_selectfrom" />


                        <TextView
                            android:id="@+id/selectedtodate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Date"
                            android:textColor="@color/bgColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="@id/check_out_circle"
                            app:layout_constraintRight_toRightOf="@id/check_out_circle"
                            app:layout_constraintTop_toBottomOf="@id/check_out_circle" />


                        <TextView

                            android:id="@+id/punch_in_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-----"
                            android:textColor="@color/bgColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="@id/img_selectfrom"
                            app:layout_constraintRight_toRightOf="@id/img_selectfrom"
                            app:layout_constraintTop_toBottomOf="@id/selectfromdate" />


                        <TextView

                            android:id="@+id/punch_out_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="------"
                            android:textColor="@color/bgColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="@id/check_out_circle"
                            app:layout_constraintRight_toRightOf="@id/check_out_circle"
                            app:layout_constraintTop_toBottomOf="@id/selectedtodate" />


                        <TextView

                            android:id="@+id/working_hours_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text= "Duration - -----"
                            android:textColor="@color/yellow"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/punch_out_time_tv"
                            app:layout_constraintLeft_toRightOf="@id/img_selectfrom"
                            app:layout_constraintRight_toLeftOf="@id/check_out_circle"
                            app:layout_constraintTop_toTopOf="@id/punch_in_time_tv" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_submit"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_background2"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />



                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/you_day_marked_successfully_tv"
                            android:layout_width="match_parent"
                            android:layout_height="25sp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Your Day is Marked Successfully"
                            android:textAlignment="center"
                            android:textColor="@color/bgColor"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>








            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/report_card_view_click"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="3dp"
            app:cardUseCompatPadding="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/report_image_view"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:src="@drawable/attendance" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/your_attendance_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/report_image_view"
                    android:text="Your Leave Report"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/your_attendance_report_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/your_attendance_report"
                    android:layout_toRightOf="@id/report_image_view"
                    android:text="Just One Tap &amp; get your all report"
                    android:textSize="10sp" />



                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:src="@drawable/arrow" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>