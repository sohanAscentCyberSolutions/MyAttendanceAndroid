<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/white_grey"
    app:cardCornerRadius="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginEnd="10sp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:src="@drawable/student" />

            <LinearLayout
                android:id="@+id/llView"
                android:layout_width="62sp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/imageView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/studentName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:autoSizeTextType="uniform"
                    android:text="VinayVinit"
                    android:textColor="@color/blue_pie"
                    tools:targetApi="o" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rollNo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Roll No: "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/studentRollNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/llView"
                android:background="@color/bgColor" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/view"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioPresent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/green_pie"
                    android:checked="false"
                    android:text=" Present"
                    android:textColor="@color/green_pie"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/radioAbsent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/red_pie"
                    android:checked="false"
                    android:text="  Absent"
                    android:textColor="@color/red_pie"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/radioLeave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:checked="false"
                    android:text="  Leave"
                    android:textColor="@color/yellow"
                    android:textSize="12sp" />
            </RadioGroup>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>