<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_150"
        android:background="@color/bgColor">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_15"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layoutmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/spacing_120"
            android:layout_height="@dimen/spacing_120"
            android:src="@drawable/profiletwo"
            android:layout_marginLeft="@dimen/spacing_30"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_emp_name"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/alice"
                android:textSize="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_20"
                android:layout_marginLeft="@dimen/spacing_30"/>
            <TextView
                android:id="@+id/tv_emp_id"
                android:layout_marginLeft="@dimen/spacing_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_16"
                android:fontFamily="@font/alice"
                android:textColor="@color/white"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/spacing_30"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/spacing_16"
                android:textColor="@color/bgColor"
                android:fontFamily="@font/alice"
                android:layout_height="wrap_content"
                android:id="@+id/tv_designation" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/layoutmn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="@dimen/spacing_30"
                    android:text="Employee Role"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alice"
                    android:layout_weight="1"
                    android:textSize="@dimen/spacing_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_role"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alice"
                    android:textSize="@dimen/spacing_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/spacing_30"
                        android:text="Division"
                        android:textColor="@color/black"
                        android:fontFamily="@font/alice"
                        android:layout_weight="1"
                        android:textSize="@dimen/spacing_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_division"
                        android:textColor="@color/black"
                        android:fontFamily="@font/alice"
                        android:layout_weight="1"
                        android:textSize="@dimen/spacing_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/spacing_30"
                        android:text="Department"
                        android:textColor="@color/black"
                        android:fontFamily="@font/alice"
                        android:layout_weight="1"
                        android:textSize="@dimen/spacing_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/alice"
                        android:textSize="@dimen/spacing_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/spacing_30"
                        android:text="Work Location"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/alice"
                        android:textSize="@dimen/spacing_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_work_location"
                        android:textColor="@color/black"
                        android:fontFamily="@font/alice"
                        android:textSize="@dimen/spacing_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>




</RelativeLayout>